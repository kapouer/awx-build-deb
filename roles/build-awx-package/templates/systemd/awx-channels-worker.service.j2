[Unit]
Description=AWX channels worker service
After=syslog.target network.target

[Service]
User={{ awx_user }}
Group={{ awx_group }}
Environment=AWX_SETTINGS_FILE={{ awx_settings_file }}
ExecStart=/usr/local/bin/awx-manage runworker --only-channels 'websocket.*'
KillMode=process
Restart=on-failure
RestartSec=2s

[Install]
WantedBy=multi-user.target
