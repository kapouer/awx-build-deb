[Unit]
Description=AWX daphne service
After=syslog.target network.target

[Service]
User={{ awx_user }}
Group={{ awx_group }}
Environment=AWX_SETTINGS_FILE={{ awx_settings_file }}
ExecStart={{ awx_venv_awx }}/bin/daphne -b 127.0.0.1 -p 8051 awx.asgi:channel_layer
KillMode=process
Restart=on-failure
RestartSec=2s

[Install]
WantedBy=multi-user.target
