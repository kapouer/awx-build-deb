[Unit]
Description=AWX wsbroadcast
After=syslog.target network.target

[Service]
User={{ awx_user }}
Group={{ awx_group }}
Environment=AWX_SETTINGS_FILE={{ awx_settings_file }}
ExecStart={{ awx_venv_awx }}/bin/awx-manage run_wsbroadcast
KillMode=process
Restart=on-failure
RestartSec=2s

[Install]
WantedBy=multi-user.target
